<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Companions.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Companions"
    xmlns:views="clr-namespace:Companions.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar
        >
        <Tab 
            Title="Главная"
            Icon="home_icon.png"
            >
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab 
            Title="Чаты"
            Icon="chats_icon.png"
            >
            <ShellContent ContentTemplate="{DataTemplate views:TestPage}" />
        </Tab>
        <Tab 
            Title="Заказы"
            Icon="orders_icon.png"
            >
            <ShellContent ContentTemplate="{DataTemplate views:CodePage}" />
        </Tab>
        <Tab 
            Title="Профиль"
            Icon="account_icon.png"
            >
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
    </TabBar>

</Shell>
